#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  --harmony_weakmaps --harmony_proxies "$basedir/../mr/bin/mr" "$@"
  ret=$?
else 
  node  --harmony_weakmaps --harmony_proxies "$basedir/../mr/bin/mr" "$@"
  ret=$?
fi
exit $ret
